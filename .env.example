# Slack
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Optional if you use user tokens:
# SLACK_USER_TOKEN=xoxp-...

# LLM Configuration - Choose your backend
LLM_BACKEND=ollama  # Options: "ollama" or "groq"

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=granite4

# Groq Configuration (for cloud LLM)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama3-8b-8192  # Options: llama3-8b-8192, mixtral-8x7b-32768, gemma-7b-it

# RAG Configuration
USE_RAG=false
RAG_PERSIST_DIR=./rag_index
RAG_TOP_K_TABLES=5
RAG_TOP_N_COLUMNS=8

# DB
SQLITE_PATH=./chinook.db
# Optional: provide a manual schema summary instead of auto-introspection
# SCHEMA_YAML_PATH=./schema.yaml

# Query Configuration
# Set query row limit for /dd commands (default: 500)
# Set to 0 or negative value to disable limit entirely
# QUERY_LIMIT=500
# QUERY_LIMIT=0  # Uncomment to disable limit

# ASKDB_FORCE_AGENTIC=true